<header>
  <h1>All the registered pets</h1>
  <button type="button" class="btn btn-sm btn-success btn-add" {{action 'openCreateModal'}}>
    <span class="glyphicon glyphicon-plus"></span>
  </button>
</header>

<div class="col-md-6">
  <table class="table">
    <thead>
      <tr>
        <th></th>
        <th>Name</th>
        <th>Genre</th>
        <th>Sterilized</th>
        <th>Comments</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      {{#each pet in model}}
      <tr>
        <td>
          <img {{bind-attr src=pet.img}} height="30">
        </td>
        <td>
          <p>{{pet.name}}</p>
        </td>
        <td>
          <p>{{pet.genre}}</p>
        </td>
        <td>
          <span {{bind-attr class=':glyphicon pet.sterilized:glyphicon-ok:glyphicon-remove'}}></span>
        </td>
        <td>
          {{excerpt-tooltip content=pet.comments}}
        </td>
        <td>
          <span>
            <button type="button" class="btn btn-xs btn-info">
              <span class="glyphicon glyphicon-eye-open"></span>
            </button>
            <button type="button" class="btn btn-xs btn-warning">
              <span class="glyphicon glyphicon-pencil"></span>
            </button>
            <button type="button" class="btn btn-xs btn-danger" {{action 'delete' pet}}>
              <span class="glyphicon glyphicon-trash"></span>
            </button>
          </span>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>
